# 应用配置
DEBUG=true
ENVIRONMENT=development
HOST=127.0.0.1
PORT=8000
RELOAD=true

# 数据库配置（使用本地 PostgreSQL，Homebrew 安装）
# 使用当前系统用户 orange，无需密码（信任认证）
DATABASE_URL=postgresql://orange@localhost:5432/charge_analysis

# Redis 配置（使用本地 Redis）
REDIS_URL=redis://localhost:6379/0

# JWT 配置
SECRET_KEY=your-secret-key-here-change-in-production-please-replace-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# 文件上传配置
UPLOAD_PATH=uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=[".blf",".csv",".xlsx",".pdf",".doc",".docx",".txt"]

# ChromaDB 配置
CHROMA_PERSIST_DIRECTORY=chromadb_data
CHROMA_COLLECTION_NAME=charging_knowledge

# 模型配置
BGE_MODEL_NAME=BAAI/bge-base-zh-v1.5
SMALL_MODEL_PATH=models/1.5b_flow_control_model
LLM_MODEL_PATH=models/llm_model

# LLM 配置
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# 训练配置
TRAINING_WORKERS=4
MAX_TRAINING_TIME=3600

# CORS 配置
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=

DEBUG=False